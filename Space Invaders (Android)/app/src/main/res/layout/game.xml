<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gamelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        style="@style/GameLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

         <ImageView
            android:id="@+id/buttonMoveLeftGame"
            style="@style/Widget.Control.GameButton" />
         <ImageView
            android:id="@+id/buttonMoveRightGame"
            style="@style/Widget.Control.GameButton" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameLayoutWeaponsGame"
        style="@style/GameLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >

    </LinearLayout>

    <LinearLayout
        style="@style/GameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <com.dreede.spaceinvaders.view.FontTextView
            style="@style/Widget.TextView.T.Small"
            android:text="@string/points_colon" />

        <com.dreede.spaceinvaders.view.FontTextView
            android:id="@+id/textViewPointsGame"
            style="@style/Widget.TextView.T.Small" />
    </LinearLayout>

    <LinearLayout
        style="@style/GameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <com.dreede.spaceinvaders.view.FontButton
            android:id="@+id/buttonPauseGame"
            style="@style/Widget.Control.MenuButton"
            android:text="@string/pause" />
    </LinearLayout>

</RelativeLayout>